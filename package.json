{
    "name": "@makehq/sdk",
    "private": true,
    "version": "0.1.0",
    "description": "Make TypeScript SDK",
    "license": "MIT",
    "author": "Make",
    "repository": "github:integromat/make-typescript-sdk",
    "homepage": "https://www.make.com",
    "type": "module",
    "main": "./dist/cjs/index.js",
    "module": "./dist/esm/index.js",
    "types": "./dist/esm/index.d.ts",
    "scripts": {
        "watch": "tsc -w",
        "build": "npm run build:esm && npm run build:cjs",
        "build:esm": "tsc -p tsconfig.esm.json",
        "build:cjs": "tsc -p tsconfig.cjs.json",
        "build:docs": "typedoc src/index.ts",
        "prepare": "npm run build",
        "test": "jest --coverage --coverageReporters=\"text\" --runInBand --forceExit --verbose false --testMatch \"**/test/**/*.spec.ts\"",
        "test:integration": "jest --coverage --coverageReporters=\"text\" --runInBand --forceExit --verbose false --testMatch \"**/test/**/*.integration.test.ts\"",
        "publish:jsr": "npx jsr publish",
        "lint": "eslint --quiet .",
        "format": "npx prettier . --write"
    },
    "exports": {
        ".": {
            "import": "./dist/esm/index.js",
            "require": "./dist/cjs/index.js",
            "types": "./dist/esm/index.d.ts"
        }
    },
    "devDependencies": {
        "@eslint/js": "^9.22.0",
        "@jest/globals": "^29.7.0",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.13.10",
        "dotenv": "^16.4.7",
        "eslint": "^9.22.0",
        "eslint-config-prettier": "^10.1.1",
        "eslint-plugin-jest": "^28.11.0",
        "jest": "^29.7.0",
        "jest-fetch-mock": "^3.0.3",
        "prettier": "^3.5.3",
        "ts-jest": "^29.2.6",
        "ts-node": "^10.9.2",
        "typedoc": "^0.28.0",
        "typescript": "^5.8.2",
        "typescript-eslint": "^8.26.1"
    }
}
